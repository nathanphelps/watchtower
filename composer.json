{
    "name": "nathanphelps/watchtower",
    "description": "Cross-platform Laravel queue monitoring and worker management",
    "keywords": [
        "laravel",
        "laravel-12",
        "queue",
        "monitoring",
        "horizon",
        "workers",
        "windows",
        "cross-platform"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Nathan Phelps",
            "email": "nathan@example.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/queue": "^11.0|^12.0",
        "illuminate/redis": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/contracts": "^11.0|^12.0",
        "inertiajs/inertia-laravel": "^1.0|^2.0",
        "symfony/process": "^6.0|^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0|^10.0",
        "phpunit/phpunit": "^10.0|^11.0",
        "laravel/pint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "NathanPhelps\\Watchtower\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NathanPhelps\\Watchtower\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "NathanPhelps\\Watchtower\\WatchtowerServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
